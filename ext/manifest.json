{
    "manifest_version": 2,
    "name": "Firefox socket control",
    "version": "1.0",
    "description": "Allows apps to use unix sockets to control firefox",
    "browser_specific_settings": {
        "gecko": {
            "id": "firefox-control-daemon@example.com",
            "strict_min_version": "50.0"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "nativeMessaging",
        "tabs",
        "webNavigation",
        "webRequest"
    ]
}
